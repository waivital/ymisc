{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": false,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordWrap": "off",

  "workbench.editor.showTabs": false,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "vscode-icons",

  "window.newWindowDimensions": "maximized",
  "explorer.autoReveal": false,
  "git.autofetch": true,
  "files.insertFinalNewline": true,

  "vim.handleKeys": {
    "<C-r>": false
  },

  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      // Reload window
      "before": ["<leader>", "q", "r"],
      "commands": ["workbench.action.reloadWindow"]
    },
    {
      // Kill active editor
      "before": ["<leader>", "b", "k"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      // Reveal active file in os's File Explorer
      "before": ["<leader>", "S", "E"],
      "commands": ["workbench.action.files.revealActiveFileInWindows"]
    },
    {
      // Highlight active file in sidebar
      "before": ["<leader>", "S", "S"],
      "commands": ["workbench.files.action.showActiveFileInExplorer"]
    },
    {
      // Jump back
      "before": ["<leader>", "j", "b"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      // Jump forward
      "before": ["<leader>", "j", "f"],
      "commands": ["workbench.action.navigateForward"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [],

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "cssModules.camelCase": true,

  "prettier.quoteProps": "consistent",
  "prettier.bracketSameLine": true,
  "prettier.printWidth": 98,
  "prettier.semi": false,
  "prettier.singleQuote": true,

  "rust-analyzer.inlayHints.enable": false,

  "go.formatTool": "goimports",
  "go.lintFlags": ["--disable-all"],

  "python.languageServer": "Pylance",

  "gitlens.blame.avatars": false,
  "gitlens.hovers.avatars": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,

  "plantuml.server": "http://127.0.0.1:8080",
  "plantuml.render": "PlantUMLServer",

  "i18n-ally.ignoredLocales": [],
  "i18n-ally.dirStructure": "dir",

  // telemetry
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
}
