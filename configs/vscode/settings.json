{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordWrap": "off",

  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.editor.showTabs": false,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "vscode-icons",

  "window.newWindowDimensions": "maximized",
  "explorer.autoReveal": false,
  "git.autofetch": true,
  "files.insertFinalNewline": true,

  "vim.handleKeys": {
    "<C-r>": false
  },
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": ["<leader>", "s"],
      "after": ["<leader>", "<leader>", "s"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    }
  ],

  "vspacecode.bindingOverrides": [
    {
      "keys": "b.k",
      "name": "Kill active editor",
      "type": "command",
      "command": "workbench.action.closeActiveEditor"
    },
    {
      "keys": "S.E",
      "name": "Show active file in os filesystem",
      "type": "command",
      "command": "workbench.action.files.revealActiveFileInWindows"
    },
    {
      "keys": "S.S",
      "name": "Show active file in sidebar",
      "type": "command",
      "command": "workbench.files.action.showActiveFileInExplorer"
    },
    {
      "keys": "x.c",
      "name": "Change Case",
      "type": "command",
      "command": "extension.changeCase.commands"
    },
    {
      "keys": "j.b",
      "name": "Navigate back",
      "type": "command",
      "command": "workbench.action.navigateBack"
    },
    {
      "keys": "j.B",
      "name": "Navigate forward",
      "type": "command",
      "command": "workbench.action.navigateForward"
    }
  ],

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "cssModules.camelCase": true,

  "prettier.quoteProps": "consistent",
  "prettier.jsxBracketSameLine": true,
  "prettier.printWidth": 98,
  "prettier.semi": false,
  "prettier.singleQuote": true,

  "rust-analyzer.inlayHints.enable": false,

  "go.formatTool": "goimports",
  "go.lintFlags": ["--disable-all"],

  "python.languageServer": "Pylance",

  "gitlens.blame.avatars": false,
  "gitlens.hovers.avatars": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,

  "plantuml.server": "http://127.0.0.1:8080",
  "plantuml.render": "PlantUMLServer",

  "i18n-ally.ignoredLocales": [],
  "i18n-ally.dirStructure": "dir",

  // telemetry
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
}
